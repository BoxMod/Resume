extends layout

block content
    h1= title
    p Welcome to #{title}
    if isLogined == isLogined
        h3 #{name}
        a(href="logout")#logout 注销
        div#out
        script(type="text/javascript").
            $.ajax({
                url: '/resume',
                type: 'get',
                timeout: 36000,
                dataType: "json",
                success: function (data, textStatus) {
                    //alert(data[0].name);
                    $('#out').html(data[0].name);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("error:" + textStatus);
                }
            })